@page "/personsingle"
@using BlazorApp4.Client.Interfaces;
@using BlazorApp4.Shared
@inject HttpClient Http;
@inject IPersonService PersonService;

<h3>PersonSingle</h3>


<div class="row">
    <div class="col-md-4">
        <input placeholder="Delete" @bind="@id" />
    </div>
    <div>
    <p>name: @PersonService.person.name</p>
    </div>
    <div class="col-md-2">
        <button @onclick="GetSinglePerson" class="btn btn-light">submit</button>
    </div>
</div>

    

@code {
    private int id;

    private  void GetSinglePerson()
    {
        Console.WriteLine("single");
        PersonService.GetSinglePerson(id);
    }
}
